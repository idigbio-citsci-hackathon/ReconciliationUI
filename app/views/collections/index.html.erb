<h1>Listing collections</h1>

<table>
  <thead>
    <tr>
      <th>Collection</th>
      <th>Subjects</th>
      <th>Transcribed</th>
      <th>Reconciled</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @collections.each do |collection| %>
      <tr>
        <td><%= collection.collection_name %></td>
        <td><%= collection.subjects.count %></td>
        <td><%= collection.transcribed_records.count %></td>
        <td>TODO</td>
        <td><%= link_to 'Show', collection %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

